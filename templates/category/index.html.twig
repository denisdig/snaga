{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Liste des catégories</h1>
        <a href="{{ path('app_category_add') }}" class="btn btn-primary">Ajouter une catégorie</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>
                        <a href="{{ path('app_category_show', {id: category.id}) }}" class="btn btn-sm btn-info text-white">Voir</a>
                        <a href="{{ path('app_category_edit', {id: category.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="{{ path('app_category_delete', {id: category.id}) }}"
                           onclick="return confirm('Supprimer cette catégorie ?')"
                           class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="3" class="text-center">Aucune catégorie trouvée.</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
