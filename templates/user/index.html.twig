{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Utilisateurs</h1>
    <a href="{{ path('app_user_add') }}" class="btn btn-success mb-3">Ajouter un utilisateur</a>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Pseudo</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.pseudo }}</td>
                    <td>{{ user.adresse }}</td>
                    <td>
                        <a href="{{ path('app_user_show', {id: user.id}) }}" class="btn btn-sm btn-primary">Voir</a>
                        <a href="{{ path('app_user_edit', {id: user.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="{{ path('app_user_delete', {id: user.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Supprimer cet utilisateur ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="5">Aucun utilisateur trouv√©.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
