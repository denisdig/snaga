{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}
{% block stylesheets %}

<link rel="stylesheet" href="{{asset('css/snagaAdmin.css')}}">
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="title">
            <p><a href="{{path('app_admin')}}">Back office</a></p>
        </div>
    </div>
</div>

<div class="container">
    <ul class="nav nav-pills nav-fill">
  <li class="nav-item">
    <a class="nav-link active" aria-current="page" href="{{path('app_product_index')}}">Produits</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="{{path('app_category_index')}}">Category</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" href="{{path('app_user_index')}}">User</a>

    <li class="nav-item">
    <a class="nav-link" href="#">Link</a>
  </li>
  </li>
    </ul>
</div>





<p>Liste des produits</p>


    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Produits</h1>
        <a href="{{ path('app_product_ajouter') }}" class="btn btn-primary">Ajouter un produit</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }} €</td>
                    <td>
                        {% if product.picture %}
                            <img src="{{ asset('image/product/' ~ product.picture) }}" alt="Image" class="img-thumbnail" style="max-width: 80px;">
                        {% else %}
                            <span class="text-muted">Aucune</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-sm btn-info text-white">Voir</a>
                        <a href="{{ path('app_product_edit', {id: product.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        <a href="{{ path('app_product_delete', {id: product.id}) }}"
                           onclick="return confirm('Supprimer ce produit ?')"
                           class="btn btn-sm btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted">Aucun produit trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


